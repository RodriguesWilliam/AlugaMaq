            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoCobranca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CepCobranca)
